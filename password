import re
import streamlit as st

# Page styling
st.set_page_config(page_title="Password Strength Check By Noman", page_icon="ğŸŒ˜", layout="centered")

# Custom CSS
st.markdown("""
    <style>
        .main { text-align: center; }
        .stTextInput > div > input {
            width: 60% !important;
            margin: auto;
        }
        .stButton > button {
            width: 50%;
            background-color: #4CAF50;
            color: blue;
            font-size: 18px;
        }
        .stButton > button:hover {
            background-color: #45a049;
        }
    </style>
""", unsafe_allow_html=True)

# Page title and description
st.title("ğŸ”’ Password Strength Checker")
st.write("Enter your password below to check its security level. ğŸ”")

# Function to check password strength
def check_password_strength(password):
    score = 0
    feedback = []

    if len(password) >= 8:
        score += 1
    else:
        feedback.append("âŒ Password should be at least **8 characters long**.")

    if re.search(r'[a-z]', password) and re.search(r'[A-Z]', password):
        score += 1
    else:
        feedback.append("âŒ Password should include **both uppercase and lowercase letters**.")

    if re.search(r"\d", password):
        score += 1
    else:
        feedback.append("âŒ Password should include **at least one number (0-9)**.")

    if re.search(r"[!@#$&*]", password):
        score += 1
    else:
        feedback.append("âŒ Include **at least one special character (!@#$&*)**.")

    # Display password strength results
    if score == 4:
        st.success("âœ… **Strong Password** - Your password is secure.")
    elif score == 3:
        st.info("âš ï¸ **Moderate Password** - Consider improving security by adding more features.")
    else:
        st.error("âŒ **Weak Password** - Follow the suggestions below to strengthen it.")

    # Feedback section
    if feedback:
        with st.expander("ğŸ” Improve Your Password"):
            for item in feedback:
                st.write(item)

# Input
password_input = st.text_input("Enter your password:", type="password", help="Ensure your password is strong ğŸ”’")

# Button
if st.button("Check Password"):
    if password_input:
        check_password_strength(password_input)
    else:
        st.warning("âš ï¸ Please enter a password first!")
        
